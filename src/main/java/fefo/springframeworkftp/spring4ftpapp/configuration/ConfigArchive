        final Map<Object, SessionFactory<FTPFile>> factories = new HashMap<>();
        Branch b1 = new Branch((long) 5,"CAI","cai-notes-fs.cai.ei",21,"cai-ftp","/ftp/erbranch/EDMS/FEFO","spicysilk");
