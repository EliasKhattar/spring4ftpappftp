    }*/

    @Bean
    public DelegatingSessionFactory<FTPFile> delegatingSessionFactoryAuto(){

        SessionFactoryLocator<FTPFile> sff = createNewFtpSessionFactoryAndAddItToTheLocator();
        return new DelegatingSessionFactory<FTPFile>(sff);

    }

   /* @Bean
